<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CommonButton">
        <item name="android:background">@drawable/button_background</item>
        <!-- 여기에 다른 버튼 스타일 속성들을 추가할 수 있습니다 -->
    </style>

    <style name="Widget.Theme.MyApplication.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="Widget.Theme.MyApplication.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>
    <style name="CustomDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>

    <style name="SmallNumberPicker" parent="Theme.AppCompat">
        <item name="android:textSize">12sp</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="ButtonWithBorder" parent="Widget.MaterialComponents.Button">
        <item name="strokeColor">@color/lightBlue</item> <!-- 테두리 색상 -->
        <item name="strokeWidth">1dp</item> <!-- 테두리 두께 -->
    </style>

    <style name="CustomEditText" parent="Widget.AppCompat.EditText">
        <item name="colorControlActivated">@color/main</item>
        <item name="colorControlNormal">@color/main</item>
        <item name="colorControlHighlight">@color/main</item>
    </style>

</resources>
