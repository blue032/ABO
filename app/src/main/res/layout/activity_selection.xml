<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <Button
        android:id="@+id/btn_ceo"
        style="@style/CommonButton"
        android:layout_width="178dp"
        android:layout_height="138dp"
        android:layout_marginTop="160dp"
        android:gravity="center"
        android:text="사장님 전용"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.819"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/icon_ceo"
        android:layout_width="153dp"
        android:layout_height="119dp"
        android:layout_marginEnd="12dp"
        android:src="@drawable/icon_ceo"
        app:layout_constraintBottom_toBottomOf="@id/btn_ceo"
        app:layout_constraintEnd_toStartOf="@id/btn_ceo"
        app:layout_constraintTop_toTopOf="@id/btn_ceo"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/btn_user"
        style="@style/CommonButton"
        android:layout_width="178dp"
        android:layout_height="138dp"
        android:layout_marginTop="160dp"
        android:gravity="center"
        android:text="사용자 전용"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.819"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_ceo"
        app:layout_constraintVertical_chainStyle="packed" />

    <ImageView
        android:id="@+id/icon_user"
        android:layout_width="153dp"
        android:layout_height="119dp"
        android:layout_marginEnd="12dp"
        android:src="@drawable/icon_user"
        app:layout_constraintBottom_toBottomOf="@id/btn_user"
        app:layout_constraintEnd_toStartOf="@id/btn_user"
        app:layout_constraintTop_toTopOf="@id/btn_user"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/back_arrow"
        android:layout_width="113dp"
        android:layout_height="45dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="296dp"
        android:src="@drawable/backarrow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="CertaIN U"
        android:textAlignment="center"
        android:textColor="#3F51B5"
        android:textSize="30sp"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>