<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/refresh_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="CertaIN U"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <EditText
            android:id="@+id/editcafename"
            android:layout_width="140dp"
            android:layout_height="58dp"
            android:ems="10"
            android:hint="카페 이름 입력"
            android:inputType="text"
            android:text=""
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="135dp"
            android:layout_marginTop="125dp" />

        <FrameLayout
            android:id="@+id/frameLayout"
            android:layout_width="337dp"
            android:layout_height="183dp"
            android:background="@drawable/frame_layout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="37dp"
            android:layout_marginTop="233dp">

        </FrameLayout>

        <EditText
            android:id="@+id/tv_waitingNumber"
            android:layout_width="169dp"
            android:layout_height="58dp"
            android:ems="10"
            android:hint="대기 번호"
            android:inputType="numberDecimal"
            android:textSize="30dp"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="77dp"
            android:layout_marginTop="286dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="103dp"
            android:layout_height="42dp"
            android:text="번입니다."
            android:textColor="@color/light_blue_900"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="246dp"
            android:layout_marginTop="302dp" />

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navigation_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:menu="@menu/bottom_nav_menu"
            app:itemBackground="@android:color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/frameLayout2"
            android:layout_width="332dp"
            android:layout_height="138dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/frame_layout"
            app:layout_constraintTop_toBottomOf="@+id/frameLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/tv_minutes"
                android:layout_width="125dp"
                android:layout_height="32dp"
                android:text="분 입니다."
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- 여기에서 bias 값을 조정합니다 -->
        </androidx.constraintlayout.widget.ConstraintLayout>

        <EditText
            android:id="@+id/waitingTime"
            android:layout_width="169dp"
            android:layout_height="58dp"
            android:ems="10"
            android:hint="최대대기시간 (분)"
            android:inputType="numberDecimal"
            android:textSize="28dp"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="65dp"
            android:layout_marginTop="470dp" />

        <ImageView
            android:id="@+id/imageViewCeoOrderChange"
            android:layout_width="35dp"
            android:layout_height="53dp"
            android:layout_marginBottom="24dp"
            android:src="@drawable/orderchange"
            app:layout_constraintBottom_toTopOf="@id/bottom_navigation_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.265"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/waitingTime"
            app:layout_constraintVertical_bias="1.0" />

        <ImageView
            android:id="@+id/imageViewCeoTimeChange"
            android:layout_width="35dp"
            android:layout_height="53dp"
            android:layout_marginBottom="24dp"
            android:src="@drawable/timechange"
            app:layout_constraintBottom_toTopOf="@id/bottom_navigation_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.731"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/waitingTime"
            app:layout_constraintVertical_bias="1.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
